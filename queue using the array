class Queue:
    def __init__(self):
        self.items = []

    def push(self, x):
        self.items.append(x)       # Add at the end

    def pop(self):
        return self.items.pop(0)   # Remove from the front

    def top(self):
        return self.items[0]       # Peek first item

    def size(self):
        return len(self.items)
